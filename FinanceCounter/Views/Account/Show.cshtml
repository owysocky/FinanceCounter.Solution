    <div id="content">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">

            <button type="button" id="sidebarCollapse" class="btn togglebtn">
                <i class="fas fa-align-left"></i>
                <span class="glyphicon glyphicon-th-list"></span>
            </button>
        </div>
    </nav>
    <div id="accountShow">
      <h2>Details of @Model["account"].GetName()</h2>

      <h4><strong>Account Name :</strong> @Model["account"].GetName()</h4>
      <h4><strong>Account Balance :</strong> $@Model["account"].GetBalance()</h4>
      <br>
      <div class="row">
        <div class="col-md-2">
          <h4>Income(s):</h4>
          <ol>
          @foreach (var income in @Model["incomeCategories"])
          {
            <li><a href="/accounts/@Model["account"].GetId()/income/@income.GetId()">@income.GetName() - $@income.GetTotal()</a></li>
          }
          </ol>
          <a href='/accounts/@Model["account"].GetId()/income/new'><button class="addbtn">
          Add Income</button></a><br><br>
          <form action="/accounts/@Model["account"].GetId()/income/deleteall" method="post">
            <button type="submit" class="addbtn">Delete all income(s)</button>
          </form>
        </div>
        <div class="col-md-2">
          <h4>Expense(s):</h4>
          <ol>
          @foreach (var expense in @Model["expenseCategories"])
          {
            <li><a href="/accounts/@Model["account"].GetId()/expense/@expense.GetId()">@expense.GetName() - $@expense.GetTotal()</a></li>
          }
          </ol>
          <a href='/accounts/@Model["account"].GetId()/expense/new'><button class="addbtn">
          Add Expense</button></a><br><br>
          <form action="/accounts/@Model["account"].GetId()/expense/deleteall" method="post">
            <button type="submit" class="addbtn">Delete all expense(s)</button>
          </form>
        </div>
      </div>
      <br><br><br>


      <a href='/accounts/@Model["account"].GetId()/edit'><button class="addbtn">
      Edit this account</button></a>

      <a href='/accounts/new'><button class="addbtn">
      Add a new account</button></a>
      <br><br>
      <form action="/accounts/@Model["account"].GetId()/delete" method="post">
        <button type="submit" class="addbtn">Delete this account</button>
      </form>
    </div>
      <div class="line"></div>
    </div>
</div>


