@{
  Layout = "_Layout";
}
<div class="wrapper">
    <!-- Sidebar  -->
    <nav id="sidebar">
        <div class="sidebar-header">
            <h3>Budget App</h3>
        </div>

        <ul class="list-unstyled components">
            <p>Welcome, Kenny</p>
            <li class="active">
                <a href="/">Home</a>
            </li>
            <li>
                <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Accounts</a>
                <ul class="collapse list-unstyled" id="pageSubmenu">
                    <li>
                        <a href="/accounts">View All Accounts</a>
                    </li>
                    <li>
                        <a href="/accounts/new">Add Account</a>
                    </li>
                </ul>
            </li>
            <li>
                <a href="/home/aboutus">About Us</a>
            </li>
            <li>
                <a href="/home/contact">Contact</a>
            </li>
        </ul>

        <ul class="list-unstyled CTAs">
            <li>
                <a href="https://github.com/owysocky/FinanceCounter.Solution/tree/master" class="download">Source Code</a>
            </li>
        </ul>
    </nav>

    <div id="content">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">

            <button type="button" id="sidebarCollapse" class="btn togglebtn">
                <i class="fas fa-align-left"></i>
                <span class="glyphicon glyphicon-th-list"></span>
            </button>
        </div>
    </nav>
    <div id="incomeShow">
    <h2>Details of @Model["newIncomeCategory"].GetName()</h2>
    <h3>Income Amount: $@Model["newIncomeCategory"].GetTotal()</h3>
    <br>
    <a href="/accounts/@Model["account"].GetId()/income/@Model["newIncomeCategory"].GetId()/edit">
    <button class="addbtn">Edit this income</button>
    </a>
    <br><br>
    <form action="/accounts/@Model["account"].GetId()/income/@Model["newIncomeCategory"].GetId()/delete" method="post">
      <button type="submit" class="addbtn">Delete this income</button>
    </form>
    <br>
    <a href="/accounts/@Model["account"].GetId()">
    <button class="addbtn">Back to account details</button></a>
    <div class="line"></div>
    </div>

</div>


